[core]
  whitespace=fix,-indent-with-non-tab,tab-in-indent,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
  autocrlf = input
	commitGraph = true
	editor = vim
[alias]
  praise = blame
  st = status
  br = branch -vv
  lg = log -p
  ci = commit -v
  co = checkout
  cp = cherry-pick
  patch = add -p
  staged = diff --staged
  fetch = fetch -p
  wtf = blame
  ignore = update-index --assume-unchanged
  no-ignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  touch = add --intent-to-add
  workprofile = config --local user.email \"matt.valentinehouse@shopify.com\"
[push]
  default = upstream
[merge]
  stat = true
[rebase]
  autoSquash = true
  autoStash = true
[branch]
	autosetuprebase = always
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red reverse
  new = green reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[user]
  name = Matt Valentine-House
  email = matt@eightbitraptor.com
[http]
  sslverify = false
[include]
  path = ~/.gitconfig.local
[diff]
	algorithm = patience
[commit]
	verbose = true
[init]
	defaultBranch = main
[pull]
	rebase = true
