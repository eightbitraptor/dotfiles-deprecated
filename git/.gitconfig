[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
  autocrlf = input
[alias]
  st = status
  br = branch -vv
  lg = log -p
  ci = commit -v
  co = checkout
  patch = add -p
  staged = diff --staged
  f = fetch -p
  wtf = blame
  ignore = update-index --assume-unchanged
  no-ignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"
[push]
  default = upstream
[merge]
  stat = true
[rebase]
  autoSquash = true
  autoStash = true
[branch]
	autosetuprebase = always
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red reverse
  new = green reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[user]
  name = Matt Valentine-House
  email = matt.valentinehouse@shopify.com
[http]
  sslverify = false
[include]
  path = .gitconfig.local
[diff]
	algorithm = patience
[protocol]
	version = 2
[commit]
	verbose = true
