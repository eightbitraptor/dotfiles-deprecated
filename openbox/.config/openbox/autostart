# Set the wallpaper (from the previous session)
/bin/bash $HOME/.fehbg &

# Use Caps lock key as a third CTRL key
/usr/bin/setxkbmap -option "ctrl:nocaps" &

# Compositor for transparency (important for Ulauncher - it looks shit otherwise)
/usr/bin/compton &

# Polybar for simple observability
/bin/bash $HOME/.config/polybar/launch.sh
